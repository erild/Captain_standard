[
  {
    "name": "eslint",
    "languages": [
      "javascript"
    ],
    "installCmd": "npm install -g eslint",
    "runCmd": "eslint -f json"
  },
  {
    "name": "coffeelint",
    "languages": [
      "coffeescript"
    ],
    "installCmd": "npm install -g coffeelint",
