<VirtualHost *:80>
        ServerName {{ apache_server_name }}
        ProxyPass / http://localhost:{{ app_port }}/
        ProxyPassReverse / http://localhost:{{ app_port }}/
</VirtualHost>
<VirtualHost *:443>
        ServerName {{ apache_server_name }}
        SSLEngine On
        SSLCertificateFile /etc/ssl/cert.pem
        SSLCertificateKeyFile /etc/ssl/key.pem
        ProxyPass / http://localhost:{{ app_port }}/
        ProxyPassReverse / http://localhost:{{ app_port }}/
</VirtualHost>
